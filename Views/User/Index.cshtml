@{
    ViewData["Title"] = "User Form";
}

<div class="row gx-4 gy-4">
    <div class="col-lg-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">Enter User</h5>
                <form id="userForm" novalidate>
                    <input type="hidden" id="Id" name="Id" value="0" />
                    <input type="hidden" id="Hobbies" name="Hobbies" value="" />

                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input class="form-control" id="Name" name="Name" required />
                    </div>

                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input class="form-control" id="Email" name="Email" type="email" required />
                    </div>

                    <div class="mb-3">
                        <label for="MobileNo" class="form-label">Mobile No</label>
                        <input class="form-control" id="MobileNo" name="MobileNo" pattern="^[0-9]{10}$" required />
                    </div>

                    <div class="mb-3">
                        <label for="Address" class="form-label">Address</label>
                        <textarea class="form-control" id="Address" name="Address" rows="3" required></textarea>
                    </div>

                    <fieldset class="mb-3">
                        <legend class="col-form-label pt-0">Gender</legend>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="GenderMale" name="Gender" value="Male" required />
                            <label class="form-check-label" for="GenderMale">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="GenderFemale" name="Gender" value="Female" required />
                            <label class="form-check-label" for="GenderFemale">Female</label>
                        </div>
                    </fieldset>

                    <div class="mb-3">
                        <label for="State" class="form-label">State</label>
                        <input class="form-control" id="State" name="State" autocomplete="off" required />
                    </div>

                    <div class="mb-3">
                        <label for="HobbiesSelect" class="form-label">Hobbies</label>
                        <select class="form-select" id="HobbiesSelect" multiple size="4">
                            <option value="Reading">Reading</option>
                            <option value="Music">Music</option>
                            <option value="Sports">Sports</option>
                            <option value="Travel">Travel</option>
                            <option value="Gaming">Gaming</option>
                        </select>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" id="saveBtn" class="btn btn-primary">Save</button>
                        <button type="button" id="updateBtn" class="btn btn-warning" style="display:none;">Update</button>
                        <button type="button" id="resetBtn" class="btn btn-secondary">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-9">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">Saved Users</h5>
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="userGrid">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>State</th>
                                <th>Hobbies</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">User Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/user.js" asp-append-version="true"></script>
}
